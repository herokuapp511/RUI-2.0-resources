<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:androidprv="http://schemas.android.com/apk/prv/res/android" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <stroke android:width="3dp" android:color="@android:color/white"/>
            <corners android:radius="16dp"/>
            <smooth-rect/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="0.6dp" android:color="#14ffffff"/>
            <corners android:radius="16dp"/>
            <smooth-rect/>
        </shape>
    </item>
</selector>
