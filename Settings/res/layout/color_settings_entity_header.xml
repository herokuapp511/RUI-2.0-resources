            <TextView android:textColor="@color/color_preference_secondary_text_color" android:id="@+id/entity_header_second_summary" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/TextAppearance.EntityHeaderSummary"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
