        <RadioButton android:id="@+id/rb_default" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp"/>
    </LinearLayout>
    <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="32dp">
        <ImageView android:id="@+id/img_raise" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/oplus_keyboard_position_raised" android:forceDarkAllowed="false"/>
        <TextView android:id="@+id/tv_raise" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="7dp" android:text="@string/keyboard_position_raise" style="@style/ColorPreferenceSummaryStyle"/>
        <RadioButton android:id="@+id/rb_raise" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp"/>
    </LinearLayout>
</LinearLayout>
