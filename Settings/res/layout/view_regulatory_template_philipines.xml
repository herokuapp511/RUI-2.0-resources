<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:settings="http://schemas.android.com/apk/res/com.android.settings" xmlns:androidprv="http://schemas.android.com/apk/prv/res/android" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:oppo="http://schemas.android.com/apk/res/oppo" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:paddingLeft="@dimen/regulatory_item_padding" android:paddingRight="@dimen/regulatory_item_padding" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:id="@+id/title" android:text="@string/philippines_country" style="@style/RegulatoryTitleStyle"/>
    <LinearLayout android:background="@drawable/color_regulatory_solid_line_rect" android:paddingTop="2dp" android:paddingBottom="2dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/regulatory_content_margin_top" android:layoutDirection="ltr">
        <ImageView android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="9dp" android:src="@drawable/ic_philippines_regulatory"/>
        <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
            <TextView android:textSize="15sp" android:textColor="@android:color/black" android:id="@+id/ntc_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="NTC"/>
            <TextView android:textSize="15sp" android:textColor="@android:color/black" android:id="@+id/approval_no" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Type Approval No.:"/>
            <LinearLayout android:layout_gravity="center_horizontal" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layoutDirection="ltr">
                <TextView android:textSize="15sp" android:textColor="@android:color/black" android:id="@+id/number_tag" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/philippines_regulatory"/>
                <TextView android:textSize="15sp" android:textColor="@android:color/black" android:id="@+id/number" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
