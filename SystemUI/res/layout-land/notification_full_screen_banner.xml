<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:androidprv="http://schemas.android.com/apk/prv/res/android" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="center" android:orientation="vertical" android:id="@+id/banner_layout" android:background="@drawable/notification_simple_banner_view_background" android:layout_width="wrap_content" android:layout_height="wrap_content" android:divider="@drawable/simple_banner_divider_horizontal" android:showDividers="middle">
    <RelativeLayout android:layout_gravity="center" android:id="@+id/top_layout" android:layout_width="wrap_content" android:layout_height="@dimen/top_layout_height" android:layout_marginStart="@dimen/simple_banner_margin_start">
        <LinearLayout android:orientation="horizontal" android:id="@+id/button_layout_top" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="match_parent" android:divider="@drawable/simple_banner_button_divider" android:showDividers="none|beginning|middle" android:dividerPadding="@dimen/divider_padding" android:layout_marginEnd="@dimen/margin_M6" android:layout_alignParentEnd="true">
            <Button android:textColor="@drawable/simple_banner_button_background" android:gravity="center" android:layout_gravity="center" android:id="@+id/button_1" android:background="@android:color/transparent" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="match_parent" android:maxWidth="@dimen/btn_max_width" android:maxLines="2" android:textAllCaps="false" android:paddingStart="@dimen/margin_M5" android:paddingEnd="@dimen/margin_M5" android:autoSizeTextType="1" android:autoSizeMinTextSize="@dimen/font_size_TF01" android:autoSizeMaxTextSize="@dimen/font_size_TF05"/>
            <Button android:textColor="@drawable/simple_banner_button_background" android:gravity="center" android:layout_gravity="center" android:id="@+id/button_2" android:background="@android:color/transparent" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="match_parent" android:maxWidth="@dimen/btn_max_width" android:maxLines="2" android:textAllCaps="false" android:paddingStart="@dimen/margin_M5" android:paddingEnd="@dimen/margin_M5" android:autoSizeTextType="1" android:autoSizeMinTextSize="@dimen/font_size_TF01" android:autoSizeMaxTextSize="@dimen/font_size_TF05"/>
        </LinearLayout>
        <LinearLayout android:id="@+id/content_layout" android:layout_width="wrap_content" android:layout_height="match_parent" android:maxWidth="400dp" android:minWidth="300dp" android:layout_marginEnd="@dimen/margin_M6" android:layout_toStartOf="@+id/button_layout_top" android:layout_alignParentStart="true">
            <FrameLayout android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <ImageView android:layout_gravity="center" android:id="@+id/app_icon" android:layout_width="@dimen/icon_size" android:layout_height="@dimen/icon_size"/>
                <ImageView android:id="@+id/app_cloned_indicator" android:visibility="visible" android:layout_width="@dimen/icon_size" android:layout_height="@dimen/icon_size" android:src="@drawable/simple_banner_app_clone_corner" android:layout_centerInParent="true" android:contentDescription="@null" android:layout_alignParentStart="true"/>
            </FrameLayout>
            <TextView android:textSize="@dimen/font_size_TD06" android:textColor="@color/simple_banner_text_color" android:ellipsize="end" android:layout_gravity="center" android:id="@+id/app_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxWidth="78dp" android:singleLine="true" android:layout_marginStart="@dimen/margin_M4"/>
            <TextView android:textSize="@dimen/font_size_TD06" android:textColor="@color/simple_banner_text_color" android:layout_gravity="center" android:id="@+id/app_content" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:layout_marginStart="@dimen/margin_M4"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/button_layout_bottom" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/bottom_layout_height" android:divider="@drawable/simple_banner_button_divider" android:showDividers="middle">
        <Button android:textSize="@dimen/font_size_TF06" android:textColor="@drawable/simple_banner_button_background" android:gravity="center" android:layout_gravity="center" android:id="@+id/button_3" android:background="@android:color/transparent" android:visibility="gone" android:layout_width="0dp" android:layout_height="wrap_content" android:maxWidth="@dimen/btn_max_width" android:maxLines="2" android:layout_weight="1" android:paddingStart="@dimen/margin_M6" android:paddingEnd="@dimen/margin_M6"/>
        <Button android:textSize="@dimen/font_size_TF06" android:textColor="@drawable/simple_banner_button_background" android:gravity="center" android:layout_gravity="center" android:id="@+id/button_4" android:background="@android:color/transparent" android:visibility="gone" android:layout_width="0dp" android:layout_height="wrap_content" android:maxWidth="@dimen/btn_max_width" android:maxLines="2" android:layout_weight="1" android:paddingStart="@dimen/margin_M6" android:paddingEnd="@dimen/margin_M6"/>
        <Button android:textSize="@dimen/font_size_TF06" android:textColor="@drawable/simple_banner_button_background" android:gravity="center" android:layout_gravity="center" android:id="@+id/button_5" android:background="@android:color/transparent" android:visibility="gone" android:layout_width="0dp" android:layout_height="wrap_content" android:maxWidth="@dimen/btn_max_width" android:maxLines="2" android:layout_weight="1" android:paddingStart="@dimen/margin_M6" android:paddingEnd="@dimen/margin_M6"/>
        <Button android:textSize="@dimen/font_size_TF06" android:textColor="@drawable/simple_banner_button_background" android:gravity="center" android:layout_gravity="center" android:id="@+id/button_6" android:background="@android:color/transparent" android:visibility="gone" android:layout_width="0dp" android:layout_height="wrap_content" android:maxWidth="@dimen/btn_max_width" android:maxLines="2" android:layout_weight="1" android:paddingStart="@dimen/margin_M6" android:paddingEnd="@dimen/margin_M6"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:id="@+id/reply_layout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/bottom_layout_height" android:layout_marginStart="@dimen/margin_M5" android:layout_marginEnd="@dimen/margin_M5">
        <com.coloros.systemui.notification.view.RemoteEditText android:textSize="@dimen/font_size_TF05" android:textColor="@color/theme_color_C12" android:textColorHint="@drawable/simple_banner_reply_hint_color" android:ellipsize="start" android:id="@+id/reply_edit" android:background="@null" android:layout_width="0dp" android:layout_height="wrap_content" android:hint="@string/reply_hint" android:cursorVisible="true" android:singleLine="true" android:layout_weight="1" android:inputType="none|text|textCapSentences|textAutoCorrect|textShortMessage" android:imeOptions="actionUnspecified|actionSend|flagNoFullscreen|flagNoExtractUi" android:textCursorDrawable="@color/theme_color_C12"/>
        <Button android:id="@+id/send_button" android:background="@drawable/simple_banner_send_button_background" android:layout_width="@dimen/send_button_size" android:layout_height="@dimen/send_button_size"/>
    </LinearLayout>
</LinearLayout>
