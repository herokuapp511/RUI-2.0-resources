            <TextView android:textSize="@dimen/font_size_TD09" android:textColor="@color/aod_clock_black" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/aod_extra_hint_date" android:layout_weight="1"/>
            <com.color.support.widget.OppoCheckBox android:id="@+id/cb_ramless_date" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/ramless_layout_lunar" android:paddingTop="14dp" android:paddingBottom="14dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="24dp" android:paddingEnd="24dp">
            <TextView android:textSize="@dimen/font_size_TD09" android:textColor="@color/aod_clock_black" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/aod_extra_hint_lunar" android:layout_weight="1"/>
            <com.color.support.widget.OppoCheckBox android:id="@+id/cb_ramless_lunar" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/ramless_layout_notification" android:paddingTop="14dp" android:paddingBottom="14dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="24dp" android:paddingEnd="24dp">
            <TextView android:textSize="@dimen/font_size_TD09" android:textColor="@color/aod_clock_black" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/aod_extra_hint_notification" android:layout_weight="1"/>
            <com.color.support.widget.OppoCheckBox android:id="@+id/cb_ramless_notification" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/ramless_layout_battery" android:paddingTop="14dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="24dp" android:paddingEnd="24dp">
            <TextView android:textSize="@dimen/font_size_TD09" android:textColor="@color/aod_clock_black" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/aod_extra_hint_battery" android:layout_weight="1"/>
            <com.color.support.widget.OppoCheckBox android:id="@+id/cb_ramless_battery" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
