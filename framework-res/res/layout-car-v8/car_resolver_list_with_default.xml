                    <com.android.internal.app.ResolverViewPager android:id="@+id/profile_pager" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                </FrameLayout>
            </LinearLayout>
        </TabHost>
        <View android:background="?attr/dividerVertical" android:layout_width="match_parent" android:layout_height="1dp"/>
    </LinearLayout>
</com.android.internal.widget.ResolverDrawerLayout>
